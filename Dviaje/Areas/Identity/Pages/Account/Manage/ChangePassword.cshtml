@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Cambiar Contraseña";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}


@section Styles {
    <!-- Toast v1.4 -->
    <link href="~/lib/iziToast/iziToast.min.css" rel="stylesheet" />

    <!-- Estilos custom -->
    <link rel="stylesheet" href="~/css/identity/manage-password.css" />
}

<section class="contenedor-manage">
    <div class="contenedor-manage-contenido b-s-95">
        <div class="contenedor-datos b-s-93">
            <h1>@ViewData["Title"]</h1>
            <form id="change-password-form" method="post">
                <div class="contenedor-form-inputs">
                    <div>
                        <label asp-for="ManagePassword.OldPassword" class="input-label">
                            <input asp-for="ManagePassword.OldPassword" class="input-field" autocomplete="current-password" aria-required="true" type="password"/>
                            <span class="input-placeholder">Contraseña Anterior</span>
                        </label>
                        <span asp-validation-for="ManagePassword.OldPassword" class="validation-message"></span>
                    </div>
                    <div>
                        <label asp-for="ManagePassword.NewPassword" class="input-label">
                            <input asp-for="ManagePassword.NewPassword" class="input-field" autocomplete="new-password" aria-required="true" type="password" />
                            <span class="input-placeholder">Nueva Contraseña</span>
                        </label>
                        <span asp-validation-for="ManagePassword.NewPassword" class="validation-message"></span>
                    </div>
                    <div>
                        <label asp-for="ManagePassword.ConfirmPassword" class="input-label">
                            <input asp-for="ManagePassword.ConfirmPassword" class="input-field" autocomplete="new-password" aria-required="true" type="password" />
                            <span class="input-placeholder">Confirmar Contraseña</span>
                        </label>
                        <span asp-validation-for="ManagePassword.ConfirmPassword" class="validation-message"></span>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="validation-message-all"></div>
                </div>
                <div class="hr"></div>

                <button type="submit" class="button-87-main">Actualizar Contraseña</button>
            </form>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @if (Model.Notificacion != null && Model.NotificacionTitulo != null && Model.NotificacionMensaje != null)
    {
        <partial name="_IziToastPartial" />
    }
}
