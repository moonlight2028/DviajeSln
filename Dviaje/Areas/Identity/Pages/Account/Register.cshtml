@page
@model RegisterModel

@{
    ViewData["Title"] = "Crear cuenta";
}

@section Styles {
    <link rel="stylesheet" href="~/css/autenticacion/login.css" />
}

<section class="ingreso">
    @* Banner *@
    <div class="ingreso-img">
        <img alt="Imagen representativa de Dviaje"
             src="https://images.unsplash.com/photo-1617195737496-bc30194e3a19?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80"
             class="img-f" />
    </div>

    <form id="account" method="post" class="ingreso-form">
        <h1>Únete a Dviaje</h1>

        @* Inputs *@
        <div class="ingreso-form-inputs">
            <div>
                <label asp-for="Input.Email" class="input-label">
                    <input asp-for="Input.Email" type="email" autocomplete="on" aria-required="true" class="input-field" placeholder="Correo" />
                    <span class="input-placeholder">Correo</span>
                </label>
                <span asp-validation-for="Input.Email" class="validation-message"></span>
            </div>
            <div>
                <label asp-for="Input.Password" class="input-label">
                    <input asp-for="Input.Password" type="password" autocomplete="on" aria-required="true" class="input-field" placeholder="Contraseña" />
                    <span class="input-placeholder">Contraseña</span>
                </label>
                <span asp-validation-for="Input.Password" class="validation-message"></span>
            </div>
            <div>
                <label asp-for="Input.ConfirmPassword" class="input-label">
                    <input asp-for="Input.ConfirmPassword" type="password" autocomplete="on" aria-required="true" class="input-field" placeholder="Confirmar contraseña" />
                    <span class="input-placeholder">Confirmar contraseña</span>
                </label>
                <span asp-validation-for="Input.ConfirmPassword" class="validation-message"></span>
            </div>

            @* Campo temporal de los roles. *@
            <div>
                <label>Roles temporales de test:</label>

                @foreach (var rol in Model.Input.ListaRoles)
                {
                    <input type="checkbox" name="Input.RolesSeleccionados" value="@rol" id="@($"{rol}-rol")" />
                    <label for="@($"{rol}-rol")">@rol</label>
                }
            </div>    
        </div>

        <span class="ingreso-form-condiciones">
            Al crear una cuenta, usted acepta nuestros
            <a href="#" class="underline"> términos y condiciones </a>
            y nuestra
            <a href="#" class="underline">política de privacidad</a>.
        </span>

        <button id="registerSubmit" type="submit" class="button-87-main">Crear cuenta</button>

        <div class="opciones">
            <div>
                <span>¿Ya tienes una cuenta?</span>
                <a id="forgot-password" asp-page="./Login"> Iniciar sesión</a>.
            </div>
        </div>
    </form>
</section>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
