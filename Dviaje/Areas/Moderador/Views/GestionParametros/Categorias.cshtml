@{
    ViewData["Title"] = "Gestión de Categorías";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">

}
<h2>Gestión de Categorías</h2>

<table id="tablaCategorias" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Ícono</th>
            <th>Acciones</th>
        </tr>
    </thead>
</table>

<!-- Modal para Crear/Editar -->
<div class="modal fade" id="modalCategoria" tabindex="-1" aria-labelledby="modalCategoriaLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCategoriaLabel">Nueva Categoría</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formCategoria">
                <div class="modal-body">
                    <input type="hidden" id="IdCategoria" name="IdCategoria" />
                    <div class="mb-3">
                        <label for="NombreCategoria" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="NombreCategoria" name="NombreCategoria" required />
                    </div>
                    <div class="mb-3">
                        <label for="RutaIcono" class="form-label">Ícono</label>
                        <input type="text" class="form-control" id="RutaIcono" name="RutaIcono" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            // Inicializar DataTable
            const tabla = $('#tablaUsuarios').DataTable({
                ajax: {
                    url: '/Administrador/GestionUsuarios/GetUsuarios',
                    type: 'GET',
                    dataSrc: 'data',
                },
                columns: [
                    {
                        data: 'avatar',
                        render: function (data) {
                            return data
                                ? `<img src="${data}" alt="Avatar" style="border-radius: 50%; width: 50px; height: 50px;" />`
                                : '<img src="/images/default-avatar.png" alt="Avatar por defecto" style="border-radius: 50%; width: 50px; height: 50px;" />';
                        }
                    },
                    { data: 'userName' },
                    { data: 'email' },
                    {
                        data: 'roles',
                        render: function (data, type, row) {
                            const roles = ['Turista', 'Moderador', 'Aliado', 'Administrador'];
                            return `
                                        <select class="form-select cambiar-rol" data-id="${row.idUsuario}">
                                            ${roles
                                    .map(role => `<option value="${role}" ${role === data.trim() ? 'selected' : ''}>${role}</option>`)
                                    .join('')}
                                        </select>`;
                        }
                    },
                    {
                        data: 'idUsuario',
                        render: function (data) {
                            return `
                                        <button class="btn btn-danger btn-eliminar" data-id="${data}">Eliminar</button>
                                        <button class="btn btn-warning btn-banear" data-id="${data}">Banear</button>
                                    `;
                        }
                    }
                ],
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/es_es.json',
                }
            });

            // Cambiar rol
            $('#tablaUsuarios').on('change', '.cambiar-rol', function () {
                const idUsuario = $(this).data('id');
                const nuevoRol = $(this).val();

                $.post('/Administrador/GestionUsuarios/CambiarRol', { idUsuario, nuevoRol }, function (response) {
                    if (response.success) {
                        alert(response.message);
                        tabla.ajax.reload();
                    } else {
                        alert('Error al cambiar el rol.');
                    }
                }).fail(function () {
                    alert('Error en la solicitud.');
                });
            });

            // Eliminar usuario
            $('#tablaUsuarios').on('click', '.btn-eliminar', function () {
                const idUsuario = $(this).data('id');
                if (confirm('¿Estás seguro de eliminar este usuario?')) {
                    $.post('/Administrador/GestionUsuarios/EliminarUsuario', { idUsuario }, function (response) {
                        if (response.success) {
                            alert(response.message);
                            tabla.ajax.reload();
                        } else {
                            alert('Error al eliminar el usuario.');
                        }
                    }).fail(function () {
                        alert('Error en la solicitud.');
                    });
                }
            });

            // Banear usuario
            $('#tablaUsuarios').on('click', '.btn-banear', function () {
                const idUsuario = $(this).data('id');
                if (confirm('¿Estás seguro de banear este usuario?')) {
                    $.post('/Administrador/GestionUsuarios/BanearUsuario', { idUsuario }, function (response) {
                        if (response.success) {
                            alert(response.message);
                            tabla.ajax.reload();
                        } else {
                            alert('Error al banear el usuario.');
                        }
                    }).fail(function () {
                        alert('Error en la solicitud.');
                    });
                }
            });
        });
    </script>
}
