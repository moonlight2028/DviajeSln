@{
    ViewData["Title"] = "Gestión de Restricciones";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">

}

<h2>Gestión de Restricciones</h2>

<table id="tablaRestricciones" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Ícono</th>
            <th>Acciones</th>
        </tr>
    </thead>
</table>

<!-- Modal para Crear/Editar -->
<div class="modal fade" id="modalRestriccion" tabindex="-1" aria-labelledby="modalRestriccionLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalRestriccionLabel">Nueva Restricción</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formRestriccion">
                <div class="modal-body">
                    <input type="hidden" id="IdRestriccion" name="IdRestriccion" />
                    <div class="mb-3">
                        <label for="NombreRestriccion" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="NombreRestriccion" name="NombreRestriccion" required />
                    </div>
                    <div class="mb-3">
                        <label for="RutaIcono" class="form-label">Ícono</label>
                        <input type="text" class="form-control" id="RutaIcono" name="RutaIcono" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            // Configurar el DataTable para listar restricciones
            var tabla = $("#tablaRestricciones").DataTable({
                ajax: {
                    url: "/Moderador/restricciones/listar", // RUTA CORREGIDA
                    type: "GET",
                    dataSrc: "data" 
                },
                columns: [
                    { data: "idRestriccion" },
                    { data: "nombreRestriccion" },
                    { data: "rutaIcono" },
                    {
                        data: "idRestriccion",
                        render: function (data) {
                            return `
                                        <button class="btn btn-primary btn-sm editar" data-id="${data}">Editar</button>
                                        <button class="btn btn-danger btn-sm eliminar" data-id="${data}">Eliminar</button>
                                    `;
                        }
                    }
                ]
            });

            // Abrir el modal para crear una nueva restricción
            $("#btnNuevaRestriccion").on("click", function () {
                $("#modalRestriccionLabel").text("Nueva Restricción");
                $("#formRestriccion")[0].reset();
                $("#modalRestriccion").modal("show");
            });

            // Guardar cambios (crear/editar)
            $("#formRestriccion").on("submit", function (e) {
                e.preventDefault();
                var formData = $(this).serialize();
                var id = $("#IdRestriccion").val();
                var url = id ? `/Moderador/restricciones/${id}` : "/Moderador/restricciones";
                var type = id ? "PUT" : "POST";

                $.ajax({
                    url: url,
                    type: type,
                    data: formData,
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            $("#modalRestriccion").modal("hide");
                            tabla.ajax.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert("Ocurrió un error al guardar la restricción.");
                    }
                });
            });

            // Cargar datos en el modal para editar
            $("#tablaRestricciones").on("click", ".editar", function () {
                var id = $(this).data("id");
                $.get(`/Moderador/restricciones/${id}`, function (res) {
                    if (res.success) {
                        $("#IdRestriccion").val(res.data.idRestriccion);
                        $("#NombreRestriccion").val(res.data.nombreRestriccion);
                        $("#RutaIcono").val(res.data.rutaIcono);
                        $("#modalRestriccionLabel").text("Editar Restricción");
                        $("#modalRestriccion").modal("show");
                    } else {
                        alert(res.message);
                    }
                }).fail(function () {
                    alert("Error al cargar los datos de la restricción.");
                });
            });

            // Eliminar una restricción
            $("#tablaRestricciones").on("click", ".eliminar", function () {
                var id = $(this).data("id");
                if (confirm("¿Está seguro de eliminar esta restricción?")) {
                    $.ajax({
                        url: `/Moderador/restricciones/${id}`,
                        type: "DELETE",
                        success: function (response) {
                            if (response.success) {
                                alert(response.message);
                                tabla.ajax.reload();
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function () {
                            alert("Ocurrió un error al eliminar la restricción.");
                        }
                    });
                }
            });
        });
    </script>
}
