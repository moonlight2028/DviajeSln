@{
    ViewData["Title"] = "Gestión de Propiedades";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <style>
        .container {
            margin-top: 70px;
        }

        .table {
            font-size: 0.9rem; /* Reducir el tamaño de texto */
        }

            .table th, .table td {
                text-align: center;
                vertical-align: middle;
                padding: 10px; /* Espaciado en celdas */
                white-space: nowrap; /* Evitar saltos de línea */
            }

                .table td.truncate {
                    max-width: 150px; /* Limitar ancho */
                    overflow: hidden;
                    text-overflow: ellipsis;
                    white-space: nowrap;
                }

        .modal-title {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .table-responsive {
            margin-top: 20px;
        }

        .nav-main-ul {
            position: fixed; /* Fija la barra en la parte superior */
            top: 0; /* Ubica la barra en la parte superior de la ventana */
            left: 0; /* Alinea la barra al borde izquierdo */
            width: 100%; /* Ocupa todo el ancho de la ventana */
            background-color: #fff; /* Color de fondo para que no sea transparente */
            padding: 10px 20px; /* Espaciado interno para una mejor apariencia */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Agrega una sombra para separarla visualmente del contenido */
            z-index: 1000; /* Asegura que la barra quede sobre otros elementos */
        }

            .nav-main-ul a {
                color: inherit; /* Mantiene el color del texto */
                text-decoration: none; /* Sin subrayado */
                margin-right: 15px; /* Espaciado entre enlaces */
            }

                .nav-main-ul a:hover,
                .nav-main-ul a:focus {
                    color: #fb923c; /* Cambia a un color visualmente atractivo en hover */
                    text-decoration: none; /* Sin subrayado en hover */
                }

        /* Espaciado debajo de la barra de navegación para evitar superposición */
        body {
            padding-top: 60px; /* Ajusta este valor al alto de tu barra de navegación */
        }
    </style>
}

<div class="container">
    <h2 class="text-center mb-4">Gestión de Propiedades</h2>
    <div class="text-end mb-3">
        <button id="btnCrearPropiedad" class="btn btn-success">Crear Nueva Propiedad</button>
    </div>
    <div class="table-responsive">
        <table id="tablaPropiedades" class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Ícono</th>
                    <th>Descripción</th>
                    <th>ID Categoría</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modalPropiedad" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitulo">Nueva Propiedad</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="formPropiedad">
                    <div class="modal-body">
                        <input type="hidden" id="IdPropiedad" name="IdPropiedad">
                        <div class="mb-3">
                            <label for="Nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="Nombre" name="Nombre" required>
                        </div>
                        <div class="mb-3">
                            <label for="RutaIcono" class="form-label">Ícono</label>
                            <input type="text" class="form-control" id="RutaIcono" name="RutaIcono">
                        </div>
                        <div class="mb-3">
                            <label for="Descripcion" class="form-label">Descripción</label>
                            <input type="text" class="form-control" id="Descripcion" name="Descripcion">
                        </div>
                        <div class="mb-3">
                            <label for="IdCategoria" class="form-label">ID Categoría</label>
                            <input type="number" class="form-control" id="IdCategoria" name="IdCategoria" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            const tabla = $('#tablaPropiedades').DataTable({
                ajax: {
                    url: '/Moderador/propiedades/listar',
                    type: 'GET',
                    dataSrc: 'data'
                },
                columns: [
                    { data: 'idPropiedad' },
                    { data: 'nombre', className: 'truncate' },
                    {
                        data: 'rutaIcono',
                        className: 'truncate',
                        render: function (data) {
                            return data
                                ? `<i class="${data}"></i> <span>${data}</span>`
                                : '<span class="text-muted">Sin ícono</span>';
                        }
                    },
                    { data: 'descripcion', className: 'truncate' },
                    { data: 'idCategoria' },
                    {
                        data: 'idPropiedad',
                        render: function (data) {
                            return `
                                        <button class="btn btn-warning btn-sm editar" data-id="${data}">
                                            <i class="fas fa-edit"></i> Editar
                                        </button>
                                        <button class="btn btn-danger btn-sm eliminar" data-id="${data}">
                                            <i class="fas fa-trash-alt"></i> Eliminar
                                        </button>
                                    `;
                        }
                    }
                ],
                language: { url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/es_es.json' },
                autoWidth: false,
                scrollX: true,
            });

            $('#btnCrearPropiedad').on('click', function () {
                $('#modalTitulo').text('Crear Propiedad');
                $('#formPropiedad')[0].reset();
                $('#IdPropiedad').remove();
                $('#modalPropiedad').modal('show');
            });

            $('#formPropiedad').on('submit', function (e) {
                e.preventDefault();
                const id = $('#IdPropiedad').val();
                const url = id ? '/Moderador/propiedades/actualizar' : '/Moderador/propiedades/crear';
                const type = id ? 'PUT' : 'POST';

                $.ajax({
                    url: url,
                    type: type,
                    data: $(this).serialize(),
                    success: function (response) {
                        alert(response.message);
                        if (response.success) {
                            $('#modalPropiedad').modal('hide');
                            tabla.ajax.reload();
                        }
                    },
                    error: function (xhr) {
                        console.error('Error:', xhr.responseText);
                        alert('Error al guardar la propiedad.');
                    }
                });
            });

            $('#tablaPropiedades').on('click', '.editar', function () {
                const id = $(this).data('id');
                $.get(`/Moderador/propiedades/obtener/${id}`, function (response) {
                    if (response.success) {
                        $('#modalPropiedad').find('.modal-body').prepend('<input type="hidden" id="IdPropiedad" name="IdPropiedad">');
                        $('#IdPropiedad').val(response.data.idPropiedad);
                        $('#Nombre').val(response.data.nombre);
                        $('#RutaIcono').val(response.data.rutaIcono);
                        $('#Descripcion').val(response.data.descripcion);
                        $('#IdCategoria').val(response.data.idCategoria);
                        $('#modalTitulo').text('Editar Propiedad');
                        $('#modalPropiedad').modal('show');
                    }
                }).fail(function (xhr) {
                    console.error('Error:', xhr.responseText);
                    alert('Error al cargar la propiedad.');
                });
            });

            $('#tablaPropiedades').on('click', '.eliminar', function () {
                const id = $(this).data('id');
                if (confirm('¿Está seguro de eliminar esta propiedad?')) {
                    $.ajax({
                        url: `/Moderador/propiedades/eliminar/${id}`,
                        type: 'DELETE',
                        success: function (response) {
                            alert(response.message);
                            if (response.success) tabla.ajax.reload();
                        },
                        error: function (xhr) {
                            console.error('Error:', xhr.responseText);
                            alert('Error al eliminar la propiedad.');
                        }
                    });
                }
            });
        });
    </script>
}
