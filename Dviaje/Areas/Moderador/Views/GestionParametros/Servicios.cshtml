@{
    ViewData["Title"] = "Gestión de Servicios";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <style>
        body {
            background-color: #f8f9fa; /* Fondo claro para mejor visibilidad */
        }

        h2 {
            margin-top: 20px;
            text-align: center;
            color: #495057;
        }

        .table {
            margin-top: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .modal-content {
            border-radius: 10px;
        }

        .btn {
            margin-right: 5px;
        }
    </style>
}

<h2>Gestión de Servicios</h2>

<table id="tablaServicios" class="display nowrap table table-bordered table-striped" style="width: 100%;">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Ícono</th>
            <th>Tipo</th>
            <th>Acciones</th>
        </tr>
    </thead>
</table>

<!-- Modal para Crear/Editar -->
<div class="modal fade" id="modalServicio" tabindex="-1" aria-labelledby="modalServicioLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalServicioLabel">Nuevo Servicio</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formServicio">
                <div class="modal-body">
                    <input type="hidden" id="IdServicio" name="IdServicio" />
                    <div class="mb-3">
                        <label for="NombreServicio" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="NombreServicio" name="NombreServicio" required />
                    </div>
                    <div class="mb-3">
                        <label for="RutaIcono" class="form-label">Ícono</label>
                        <input type="text" class="form-control" id="RutaIcono" name="RutaIcono" />
                    </div>
                    <div class="mb-3">
                        <label for="ServicioTipo" class="form-label">Tipo</label>
                        <select class="form-select" id="ServicioTipo" name="ServicioTipo" required>
                            <option value="Habitacion">Habitación</option>
                            <option value="Accesibilidad">Accesibilidad</option>
                            <option value="Establecimiento">Establecimiento</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            // Inicializar DataTable
            const tabla = $("#tablaServicios").DataTable({
                ajax: {
                    url: "/Moderador/servicios/listar",
                    type: "GET",
                    dataSrc: "data"
                },
                columns: [
                    { data: "idServicio" },
                    { data: "nombreServicio" },
                    { data: "rutaIcono" },
                    {
                        data: "servicioTipo",
                        render: function (data) {
                            // Mapeo de los valores ENUM
                            switch (data) {
                                case "Habitacion":
                                    return "Habitación";
                                case "Accesibilidad":
                                    return "Accesibilidad";
                                case "Establecimiento":
                                    return "Establecimiento";
                                default:
                                    return "Desconocido";
                            }
                        }
                    },
                    {
                        data: "idServicio",
                        render: function (data) {
                            return `
                                        <button class="btn btn-primary btn-sm editar" data-id="${data}">Editar</button>
                                        <button class="btn btn-danger btn-sm eliminar" data-id="${data}">Eliminar</button>
                                    `;
                        }
                    }
                ],
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/es_es.json'
                }
            });

            // Crear servicio
            $("#formServicio").on("submit", function (e) {
                e.preventDefault();
                const id = $("#IdServicio").val();
                const url = id ? `/Moderador/servicios/${id}` : "/Moderador/servicios";
                const type = id ? "PUT" : "POST";

                $.ajax({
                    url: url,
                    type: type,
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            $("#modalServicio").modal("hide");
                            tabla.ajax.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert("Ocurrió un error al guardar el servicio.");
                    }
                });
            });

            // Cargar datos para editar
            $("#tablaServicios").on("click", ".editar", function () {
                const id = $(this).data("id");
                $.get(`/Moderador/servicios/${id}`, function (response) {
                    if (response.success) {
                        $("#IdServicio").val(response.data.idServicio);
                        $("#NombreServicio").val(response.data.nombreServicio);
                        $("#RutaIcono").val(response.data.rutaIcono);
                        $("#ServicioTipo").val(response.data.servicioTipo);
                        $("#modalServicioLabel").text("Editar Servicio");
                        $("#modalServicio").modal("show");
                    } else {
                        alert(response.message);
                    }
                }).fail(function () {
                    alert("Error al cargar los datos del servicio.");
                });
            });

            // Eliminar servicio
            $("#tablaServicios").on("click", ".eliminar", function () {
                const id = $(this).data("id");
                if (confirm("¿Está seguro de eliminar este servicio?")) {
                    $.ajax({
                        url: `/Moderador/servicios/${id}`,
                        type: "DELETE",
                        success: function (response) {
                            if (response.success) {
                                alert(response.message);
                                tabla.ajax.reload();
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function () {
                            alert("Ocurrió un error al eliminar el servicio.");
                        }
                    });
                }
            });

            // Abrir modal para crear
            $("#btnNuevoServicio").on("click", function () {
                $("#modalServicioLabel").text("Nuevo Servicio");
                $("#formServicio")[0].reset();
                $("#IdServicio").val("");
                $("#modalServicio").modal("show");
            });
        });
    </script>
}
