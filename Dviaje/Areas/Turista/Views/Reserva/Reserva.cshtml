@model Reserva
@{
    ViewData["Title"] = "Reservas";
}



<h1>VISTA Reserva</h1>

<body>
    <div class="container">
        <form method="post">
            <div class="form-group">
                <label asp-for="FechaInicial"></label>
                <input type="date" asp-for="FechaInicial" />
                <span asp-validation-for="FechaInicial"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFinal"></label>
                <input type="date" asp-for="FechaFinal" />
                <span asp-validation-for="FechaFinal"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroPersonas"></label>
                <input type="number" asp-for="NumeroPersonas" />
                <span asp-validation-for="NumeroPersonas"></span>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
</body>


