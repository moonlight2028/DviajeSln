@model IEnumerable<Dviaje.Models.VM.ReservaTarjetaVM>

@{
    ViewData["Title"] = "Mis Reservas";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Mis Reservas</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            No tienes reservas aún. ¡Explora nuestras ofertas y reserva tu próxima aventura!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var reserva in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <!-- Imagen de la reserva -->
                        @if (!string.IsNullOrEmpty(reserva.Imagen))
                        {
                            <img src="@reserva.Imagen" class="card-img-top img-fluid" alt="Imagen de la reserva">
                        }
                        else
                        {
                            <img src="~/images/default-placeholder.png" class="card-img-top img-fluid" alt="Imagen no disponible">
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@reserva.TituloPublicacion</h5>
                            <p class="card-text">
                                <strong>Fecha Inicial:</strong> @reserva.FechaInicio.ToString("dd/MM/yyyy")<br />
                                <strong>Fecha Final:</strong> @reserva.FechaFinal.ToString("dd/MM/yyyy")
                            </p>
                            <div class="mt-auto">
                                <a asp-action="MiReserva" asp-route-id="@reserva.IdReserva" class="btn btn-outline-primary btn-block">
                                    Ver Detalle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
