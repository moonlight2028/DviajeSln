@model Dviaje.Models.Resena

@{
    ViewData["Title"] = "Eliminar Reseña";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Eliminar Reseña</h2>
    <div class="alert alert-warning text-center" role="alert">
        ¿Estás seguro de que deseas eliminar esta reseña?
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <p class="card-text">
                        <strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy")<br />
                        <strong>Calificación:</strong> @Model.Calificacion<br />
                        <strong>Opinión:</strong> @Model.Opinion<br />
                        <strong>Me Gusta:</strong> @Model.MeGusta
                    </p>
                    <form asp-action="EliminarConfirmado" method="post">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-action="Index" asp-route-reservaId="@Model.IdReserva" class="btn btn-secondary">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
