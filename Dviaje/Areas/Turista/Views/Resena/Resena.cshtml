@model IEnumerable<Dviaje.Models.Resena>

@{
    ViewData["Title"] = "Reseñas";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Reseñas de la Reserva</h2>
    <div class="row">
        @if (!Model.Any())
        {
            <div class="alert alert-info text-center" role="alert">
                No hay reseñas para esta reserva.
            </div>
        }
        else
        {
            foreach (var resena in Model)
            {
                <div class="col-md-6">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <p class="card-text">
                                <strong>Fecha:</strong> @resena.Fecha.ToString("dd/MM/yyyy")<br />
                                <strong>Calificación:</strong> @resena.Calificacion<br />
                                <strong>Opinión:</strong> @resena.Opinion<br />
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <a asp-action="Editar" asp-route-id="@resena.IdResena" class="btn btn-outline-secondary">Editar</a>
                                    <a asp-action="Eliminar" asp-route-id="@resena.IdResena" class="btn btn-outline-danger">Eliminar</a>
                                </div>
                                <div>
                                    <button class="like-button" data-like="resena" data-resena-id="@resena.IdResena">
                                        <i class="fa-regular fa-thumbs-up"></i>
                                    </button>
                                    <span id="me-gusta-count-@resena.IdResena">@resena.MeGusta</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <a asp-action="Crear" asp-route-reservaId="@Model.FirstOrDefault()?.IdReserva" class="btn btn-primary mt-3">Agregar Nueva Reseña</a>
</div>
