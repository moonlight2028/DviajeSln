@model Dviaje.Models.Resena

@{
    ViewData["Title"] = "Crear Reseña";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Crear Reseña</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Crear" method="post">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Opinion" class="control-label"></label>
                            <textarea asp-for="Opinion" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Opinion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Calificacion" class="control-label"></label>
                            <select asp-for="Calificacion" class="form-control">
                                <option value="">Seleccione una calificación</option>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                            <span asp-validation-for="Calificacion" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3 w-100">Guardar Reseña</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
