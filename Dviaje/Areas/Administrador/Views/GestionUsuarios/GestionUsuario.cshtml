@{
    ViewData["Title"] = "Gestión de Usuarios";
}

@section Styles {
    <!-- Estilos de DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
}

<h2>Gestión de Usuarios</h2>

<table id="tablaUsuarios" class="display nowrap" style="width:100%">
    <thead>
        <tr>
            <th>Avatar</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
</table>

@section Scripts {
    <!-- Scripts de DataTables -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            // Inicializar el DataTable
            $('#tablaUsuarios').DataTable({
                ajax: {
                    url: '/Administrador/GestionUsuarios/GetUsuarios', // Ruta al controlador
                    type: 'GET',
                    dataSrc: 'data' // Asegúrate de que coincide con el JSON retornado
                },
                columns: [
                    {
                        data: 'avatar',
                        render: function (data) {
                            if (data) {
                                return `<img src="${data}" class="img-thumbnail" style="width:50px; height:50px;" />`;
                            } else {
                                return '<img src="/images/default-avatar.png" class="img-thumbnail" style="width:50px; height:50px;" />';
                            }
                        }
                    },
                    { data: 'userName' },
                    { data: 'email' },
                    { data: 'roles' },
                    {
                        data: 'idUsuario',
                        render: function (data) {
                            return `
                                        <button class="btn btn-danger btn-sm btn-eliminar" data-id="${data}">Eliminar</button>
                                        <button class="btn btn-warning btn-sm btn-banear" data-id="${data}">Banear</button>
                                    `;
                        }
                    }
                ],
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/es_es.json' // Traducción al español
                }
            });

            // Manejar la acción de eliminar usuario
            $('#tablaUsuarios').on('click', '.btn-eliminar', function () {
                const idUsuario = $(this).data('id');
                if (confirm('¿Estás seguro de eliminar este usuario?')) {
                    $.post('/Administrador/GestionUsuarios/EliminarUsuario', { idUsuario }, function (response) {
                        if (response.success) {
                            alert(response.message);
                            $('#tablaUsuarios').DataTable().ajax.reload();
                        } else {
                            alert('Error al eliminar el usuario.');
                        }
                    });
                }
            });

            // Manejar la acción de banear usuario
            $('#tablaUsuarios').on('click', '.btn-banear', function () {
                const idUsuario = $(this).data('id');
                if (confirm('¿Estás seguro de banear este usuario?')) {
                    $.post('/Administrador/GestionUsuarios/BanearUsuario', { idUsuario }, function (response) {
                        if (response.success) {
                            alert(response.message);
                            $('#tablaUsuarios').DataTable().ajax.reload();
                        } else {
                            alert('Error al banear el usuario.');
                        }
                    });
                }
            });
        });
    </script>
}
