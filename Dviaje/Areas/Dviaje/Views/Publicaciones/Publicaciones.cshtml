                    <div class="swiper-carrusel relative w-full h-80 overflow-hidden md:h-full md:w-[30%]">
                        <div class="swiper-wrapper">
                            <!-- Slides -->
                            @if(publicacion.Imagenes != null && publicacion.Imagenes.Any())
                            {
                                foreach(var imagen in publicacion.Imagenes){
