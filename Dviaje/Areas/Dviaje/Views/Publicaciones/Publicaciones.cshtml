                    <input type="text" id="buscar" placeholder="Buscar"
                           class="peer h-8 w-full border-none bg-transparent p-0 placeholder-transparent focus:border-transparent focus:outline-none focus:ring-0 sm:text-sm" />

                    <span class="absolute start-0 top-2 -translate-y-1/2 text-xs text-gray-700 transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-sm peer-focus:top-2 peer-focus:text-xs">
                        Buscar
                    </span>
                </label>

                <!-- Fechas -->
                <div class="flex gap-2">
                    <label for="booking-busqueda-llegada"
                           class="relative block rounded-xl border border-gray-200 shadow-sm focus-within:border-orange-500 focus-within:ring-1 focus-within:ring-orange-500">
                        <input type="date" id="booking-busqueda-llegada"
                               class="peer border-none bg-transparent placeholder-transparent focus:border-transparent focus:outline-none focus:ring-0"
