@model PqrsVM

@{
    ViewData["Title"] = "PQRS";
}


@section Styles {
    <!-- Filepond v4 -->
    <link href="~/lib/filepond/filepond.css" rel="stylesheet" />

    <!-- Estilos custom -->
    <link rel="stylesheet" href="~/css/pqrs/pqrs.css">
}


<div class="contenedor-pqrs">
    <section class="datos b-s-95">
        <section>
            <h1>Preguntas Frecuentes</h1>
            <div class="accordion">
                <div class="accordion-item">
                    <button class="accordion-button" id="accordion-button-1" aria-expanded="false">
                        <span class="accordion-title">¿Cómo puedo hacer una reserva?</span>
                        <span class="icon" aria-hidden="true"></span>
                    </button>
                    <div class="accordion-content">
                        <p>
                            Para hacer una reserva, simplemente navega a la sección de "Reservas" en nuestra
                            página
                            web,
                            selecciona el destino y las fechas de tu viaje, y sigue las instrucciones para
                            completar
                            tu
                            reserva.
                        </p>
                    </div>
                </div>
            </div>
            <div class="accordion">
                <div class="accordion-item">
                    <button class="accordion-button" id="accordion-button-2" aria-expanded="false">
                        <span class="accordion-title">¿Es seguro pagar en línea?</span>
                        <span class="icon" aria-hidden="true"></span>
                    </button>
                    <div class="accordion-content">
                        <p>
                            Sí, nuestra página utiliza tecnologías de encriptación avanzadas para garantizar que
                            tus
                            datos personales y de pago estén seguros.
                        </p>
                    </div>
                </div>
            </div>
            <div class="accordion">
                <div class="accordion-item">
                    <button class="accordion-button" id="accordion-button-3" aria-expanded="false">
                        <span class="accordion-title">¿Puedo cancelar o modificar mi reserva?</span>
                        <span class="icon" aria-hidden="true"></span>
                    </button>
                    <div class="accordion-content">
                        <p>
                            Sí, puedes cancelar o modificar tu reserva a través de la sección "Mi Cuenta" en
                            nuestra
                            página web. Ten en cuenta que pueden aplicarse políticas de cancelación y cargos
                            adicionales.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <form action="" class="pqrs">
            <div class="pqrs-inputs">
                <div>
                    <label asp-for="Correo" class="input-label">
                        <input asp-for="Correo" type="email" autocomplete="on" aria-required="true"
                               class="input-field" placeholder="Correo" />
                        <span class="input-placeholder">Correo</span>
                    </label>
                    <span asp-validation-for="Correo" class="validation-message"></span>
                </div>
                <div>
                    <label asp-for="Nombre" class="input-label">
                        <input asp-for="Nombre" type="text" autocomplete="on" aria-required="true"
                               class="input-field" placeholder="Nombres" />
                        <span class="input-placeholder">Nombres</span>
                    </label>
                    <span asp-validation-for="Nombre" class="validation-message"></span>
                </div>
                <div>
                    <label asp-for="Apellidos" class="input-label">
                        <input asp-for="Apellidos" type="text" autocomplete="on" aria-required="true"
                               class="input-field" placeholder="Apellidos" />
                        <span class="input-placeholder">Apellidos</span>
                    </label>
                    <span asp-validation-for="Apellidos" class="validation-message"></span>
                </div>
                <div>
                    <label asp-for="Telefono" class="input-label">
                        <input asp-for="Telefono" type="tel" autocomplete="on" aria-required="true"
                               class="input-field" placeholder="Correo" />
                        <span class="input-placeholder">Telefono</span>
                    </label>
                    <span asp-validation-for="Telefono" class="validation-message"></span>
                </div>
                <div>
                    <label asp-for="Descripcion" class="input-label">
                        <textarea asp-for="Descripcion" aria-required="true"
                                  class="input-field input-field-textarea" placeholder="Descripción"
                                  maxlength="250"></textarea>
                        <span class="input-placeholder">Descripción</span>
                    </label>
                    <span asp-validation-for="Descripcion" class="validation-message"></span>
                </div>
            </div>

            <input type="file" id="pqrs-carga-datos" multiple />

            <button class="button-87-main">Enviar PQRS</button>
        </form>
    </section>
    <div class="pqrs-imagen">
        <img src="https://images.unsplash.com/photo-1548504769-900b70ed122e?q=80&w=2080&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Cundinamarca" class="img-f">
    </div>
</div>


@section Scripts {
    <!-- Script de FilePond y plugins -->
    <script src="https://unpkg.com/filepond/dist/filepond.min.js"></script>
    <script src="https://unpkg.com/filepond-plugin-file-validate-type/dist/filepond-plugin-file-validate-type.min.js"></script>
    <script src="https://unpkg.com/filepond-plugin-image-transform/dist/filepond-plugin-image-transform.min.js"></script>
    <script src="https://unpkg.com/filepond-plugin-image-resize/dist/filepond-plugin-image-resize.min.js"></script>

    <script src="~/js/pqrs/pqrs.js" type="module"></script>
}




