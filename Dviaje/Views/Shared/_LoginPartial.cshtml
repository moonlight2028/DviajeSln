@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="sm:flex sm:gap-2">
@if (SignInManager.IsSignedIn(User))
{
    <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>

    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
    </form>
}
else
{
    <a class="rounded-xl bg-orange-500 px-5 py-2.5 text-sm font-medium text-white shadow" id="register" asp-area="Identity" asp-page="/Account/Register">
        Ingresar
    </a>

    <div class="hidden sm:flex">
        <a class="rounded-xl bg-gray-100 px-5 py-2.5 text-sm font-medium text-orange-500" id="login" asp-area="Identity" asp-page="/Account/Login">
            Registrarse
        </a>
    </div>
}
</div>